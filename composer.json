{
    "name": "estaty/estaty",
    "description": "Real estate done right",
    "license": "MIT",
    "authors": [
        {
            "name": "Haralan Dobrev",
            "email": "hkdobrev@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "silex/silex": "~1.2",
        "twig/twig": "~1.15.1",
        "monolog/monolog": "~1.9.1",
        "doctrine/orm": "~2.4.6",
        "doctrine/migrations": "1.0.*@dev",
        "kurl/silex-doctrine-migrations-provider": "0.1.*"
    },
    "require-dev": {
        "silex/web-profiler": "~1.0.3",
        "phpunit/phpunit": "~4.4"
    },
    "autoload": {
        "psr-4": {
            "Estaty\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Estaty\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html=build/coverage",
        "test-ci": "phpunit --coverage-clover=build/coverage.clover"
    }
}
